@using System.Diagnostics
@inherits AppComponentBase
<MudStack Row=true Class=@("relative mud-width-full "+Class)>

    <Copyright />
    @if (AutoUpdateService.IsUpdatedScheduled)
    {
        <AuthorizeView Roles="@UserRoles.SuperAdmin">
            <Authorized>
                <AppTooltip @onclick=@((c)=>{Nav.NavigateTo("/settings/update");})
                            Class="mud-theme-info"
                          
                            Style="width:max-content"
                            Text="An automatic update is scheduled. Click for details">

                    <MudIcon Color="@Color.Success" Icon=@Icons.Material.Filled.ArrowCircleUp />
                </AppTooltip>
            </Authorized>
            <NotAuthorized>
                <AppTooltip Class="mud-theme-info"
                            Style="width:max-content"
                            Text="An automatic update is scheduled.">

                    <MudIcon Color="@Color.Success" Icon=@Icons.Material.Filled.ArrowCircleUp />
                </AppTooltip>
            </NotAuthorized>
        </AuthorizeView>

    }
    <MudSpacer />
    @*
    <AppTooltip Class="mud-theme-info" Style="width:max-content" Text="@ApplicationInfo.RunningVersion.Version">

    Version: @ApplicationInfo.RunningVersion.ShortVersion
    </AppTooltip>*@


</MudStack>
@code {
    [Parameter]
    public string? Class { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

    }
}