@inherits AppComponentBase
<MudElement Class="relative mud-width-full">
    <MudToolBar Style="height:1.5em;bottom:0px;" Class="px-3 mud-width-full fixed">
            <Copyright />
            @if (AutoUpdateService.IsUpdatedScheduled)
            {
                <MudTooltip @onclick=@((c)=>{Nav.NavigateTo("/settings/app");})
                    Class="mud-theme-info"
                    Style="width:max-content" 
                    Text="An automatic update is scheduled. Click for details">

                    <MudIcon Icon=@("fa-solid fa-circle-up") />
                </MudTooltip>
            }
            <MudSpacer/>
    <MudTooltip Class="mud-theme-info" Style="width:max-content" Text="@ApplicationInfo.RunningVersion.Version">

            Version: @ApplicationInfo.RunningVersion.ShortVersion
            </MudTooltip>


    </MudToolBar>
</MudElement>
