@inherits AppComponentBase
<MudText Typo="Typo.caption">@AppLocalization["Start Time"]: @StartTime </MudText>


@code {
    [Parameter]
    public IJobStep Step { get; set; }

    private string StartTime {
        get{
            if (Step.StartTime == null || !Step.StartTime.HasValue) return AppLocalization["Not started"];
            return Step.StartTime.Value.ToShortTimeString();
        }
    }
}