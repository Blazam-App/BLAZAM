@inherits AppComponentBase
<MudElement Style="width:0px;height:65px;" Class="mx-auto relative">

    <MudStack Style="right:21px;max-width: 300px;bottom: 30px;z-index: 5;" Class="mx-auto p-3 fixed">

        <MudStack Row Class="mx-auto">

            <AppTooltip Text="@AppLocalization["Discard Changes"]">

            <MudFab Color=Color.Error
                    StartIcon="@Icons.Material.Outlined.Undo"
                    OnClick="@(()=>{DiscardChanges.InvokeAsync();})" />
            </AppTooltip>


            <AppTooltip Text="@AppLocalization["Save Changes"]">
                <MudFab Color=Color.Success
                        StartIcon="@Icons.Material.Filled.Save"
                        OnClick="@(()=>{SaveChanges.InvokeAsync();})" />
            </AppTooltip>

        </MudStack>

        <MudChip T="string" Color=Color.Info>
            Unsaved Changes
        </MudChip>
        </MudStack>
        </MudElement>

 @code {
    [Parameter]
    public EventCallback SaveChanges { get; set; }
    [Parameter]
    public EventCallback DiscardChanges { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Nav.WarnOnNavigation = true;
    }
}
