            <MudText>@context.CanonicalName</MudText>
            @EndAdornment?.Invoke(context)
            }
            </Content>*@
        </MudTreeViewItem>
    </ItemTemplate>
</MudTreeView>

@if (RootOU == null || !RootOU.Any() || LoadingData)
{
    <MudProgressLinear Color="Color.Secondary" Indeterminate="true" />

}




