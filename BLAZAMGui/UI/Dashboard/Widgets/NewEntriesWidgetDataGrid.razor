@inherits MudDataGrid<T> 
@inject IStringLocalizer<AppLocalization> AppLocalization
@typeparam T where T:IDirectoryEntryAdapter

<MudDataGrid T="@T"
             Items="@Items"
              Dense=true
             Filterable=true
              RowsPerPage="@RowsPerPage"
             FilterMode="DataGridFilterMode.Simple"
             Loading=@Loading
             Square=true
             ColumnResizeMode="ResizeMode.Column"
             Virtualize=true
             RowClass="cursor-pointer"
             RowClick=@RowClick
             RowsPerPageChanged="@RowsPerPageChanged"
             Class="py-0"
             SortMode="SortMode.Single">
    <Columns>
        <TemplateColumn Title=@AppLocalization["Name"]>
            <CellTemplate>
                <MudTooltip Text="@context.Item?.OU.ToPrettyOu()">
                    <MudText>@context.Item.CanonicalName</MudText>
                </MudTooltip>
            </CellTemplate>
        </TemplateColumn>
        <TemplateColumn Title=@AppLocalization["Created"]>
            <CellTemplate>
                @if (context.Item?.Created != null)
                {
                    <MudText>@context.Item.Created.Value.ToLocalTime()</MudText>
                }
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <PagerContent>
        <MudDataGridPager PageSizeOptions=[5,10,25,50,100] T="@T" />
    </PagerContent>
</MudDataGrid>


