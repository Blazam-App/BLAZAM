@inherits MudSelect<string>
<MudSelect Label="@Label"
           T="string"
           @bind-Value="@DriveLetter"
           Disabled=@Disabled
           Adornment="@Adornment"
           AdornmentIcon="@AdornmentIcon"
           Required=@Required
           AutoFocus=@AutoFocus
           CheckedIcon="@CheckedIcon"
           Clearable=@Clearable
           HelperText="@HelperText"
           HelperTextOnFocus=@HelperTextOnFocus>
    <MudSelectItem Value="String.Empty"></MudSelectItem>
    @for (var i = 'D'; i <= 'Z'; i++)
    {
        var driveLetter = (i.ToString() + ":");
        <MudSelectItem Value=@driveLetter>@driveLetter</MudSelectItem>
    }
</MudSelect>

@code {
    private string _driveLetter="D";
    [Parameter]
    public string DriveLetter
    {
        get => _driveLetter; set
        {
            if (_driveLetter == value) return;
            _driveLetter = value;
            DriveLetterChanged.InvokeAsync(value);

        }
    }
    [Parameter]
    public EventCallback<string> DriveLetterChanged{ get; set; }
}
