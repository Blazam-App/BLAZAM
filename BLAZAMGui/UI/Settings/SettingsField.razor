<MudGrid>
    <MudItem Class="pb-0" xs="12" sm="5" md="4" lg="3" xl="2" xxl="1">
       
            @if(FieldLabel==null && !Label.IsNullOrEmpty())
            {

                <MudText Class="d-none d-sm-block" Color=Color.Default Style="margin-bottom:4px;">
                    @Label
                </MudText>
            }
            else if(FieldLabel!=null)
            {
                <MudElement>
                    @FieldLabel

                </MudElement>

            }
        
    </MudItem>
    <MudItem xs=12 md=7 lg="9" xl="10" xxl="11">
      
        @ChildContent
    </MudItem>
</MudGrid>
@code {

    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public RenderFragment? FieldLabel { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}