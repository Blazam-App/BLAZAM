@using BLAZAM.Update;
@inherits AppModalContent
<MudMarkdown OverrideHeaderTypo=ConvertHeaders Value="@Update.Release.ReleaseNotes"/>

@code {
    [Parameter]
    public ApplicationUpdate Update { get; set; }

    private string Value { get; } = "text *italics* and **bold**";
    private void OpenLink()
    {
        
    }

    private Typo ConvertHeaders(Typo from)
    {
        switch (from)
        {
            case Typo.h1:
                return Typo.h3;

            case Typo.h2:
                return Typo.h4;
            case Typo.h3:
                return Typo.h5;
            case Typo.h4:
                return Typo.h6;

            case Typo.h5:
                return Typo.h6;

            case Typo.h6:
                return Typo.h6;
            default:
                return from;
        }
    }
}
