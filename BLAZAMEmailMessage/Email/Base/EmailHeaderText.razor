
<MudText Typo="Typo.h1"
         Align="Align.Center"
         Class="v-color v-text-align v-font-size pa-3 my-auto mud-width-full"
         Style="color: #ffffff; line-height: 140%; text-align: center; word-wrap: break-word; font-size: 35px; ">
    <strong>@emailHeaderText<br></strong>
</MudText>

@code {
    string? emailHeaderText;
    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (emailHeaderText == null)

            if (DatabaseCache.ApplicationSettings.AppName != null)

                emailHeaderText = DatabaseCache.ApplicationSettings.AppName;
            else
                emailHeaderText = "Blazam";



    }
}