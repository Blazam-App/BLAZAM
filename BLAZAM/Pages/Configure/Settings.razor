@page "/settings"
@page "/settings/{ActiveTab}"
@layout MainLayout
@attribute [Authorize(Roles = UserRoles.SuperAdmin)]

@inherits TabbedAppComponentBase

<AppPageTitle>Settings</AppPageTitle>
<SetHeader>
</SetHeader>
<AuthorizeView>
        <MudTabs ActivePanelIndex="@ActiveTab">
            <MudTabPanel>
                <ChildContent>
                    <BLAZAM.Server.Shared.UI.Settings.ApplicationSettings />

                </ChildContent>
                <TabContent>
                    @SettingsLocalization["Application"]
                </TabContent>
            </MudTabPanel>
            <MudTabPanel>
                <ChildContent>
                <BLAZAM.Server.Shared.UI.Settings.AuthenticationSetting />

                </ChildContent>
                <TabContent>
                    @SettingsLocalization["Authentication"]
                </TabContent>


            </MudTabPanel>
            <MudTabPanel>
                <ChildContent>
                <BLAZAM.Server.Shared.UI.Settings.DirectorySettings />

                </ChildContent>
                <TabContent>
                    @SettingsLocalization["Active Director"]
                </TabContent>


            </MudTabPanel>
            <MudTabPanel >
                <ChildContent>
                <BLAZAM.Server.Shared.UI.Settings.EmailSettings />

                </ChildContent>
                <TabContent>
                    @SettingsLocalization["Email"]
                </TabContent>


            </MudTabPanel>
            <MudTabPanel>
                <ChildContent>
                <BLAZAM.Server.Shared.UI.Settings.UpdateSettings />

                </ChildContent>
                <TabContent>
                    @SettingsLocalization["Update"]
                </TabContent>


            </MudTabPanel>
            <MudTabPanel>
                <ChildContent>
                    <BLAZAM.Server.Shared.UI.Settings.SystemSettings />

                </ChildContent>
                <TabContent>
                    @SettingsLocalization["System"]
                </TabContent>


            </MudTabPanel>

        </MudTabs>

</AuthorizeView>

