    string Password;
    string ConfirmPassword;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        User.OnModelChanged += RefreshHeader;
        User.OnDirectoryModelRenamed += Renamed;
    }

    void RefreshHeader()
    {
        subHeader?.Refresh();
    }
