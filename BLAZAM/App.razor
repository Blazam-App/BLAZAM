@code {

    
    ApplicationTheme activeTheme = new LightTheme();
    protected override void OnInitialized()
    {
        base.OnInitialized();
        var userTheme = userStateService.CurrentUserState?.UserSettings?.Theme;
        switch (userTheme)
        {
            case "Light":
            default:
                activeTheme = new LightTheme();
                break;
            case "Dark":
                activeTheme = new DarkTheme();
                break;


        }
    }

}