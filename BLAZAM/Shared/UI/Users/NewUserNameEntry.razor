@inherits AppComponentBase
<EditForm Model="NewUserName">

<Section Title=@UserLocalization["Name"]>

        <MudField>
            
            <MudTextField Label="@UserLocalization["First Name"]" @bind-Value="@NewUserName.GivenName" />

            
        </MudField>
        <MudField>

                <MudTextField Label="@UserLocalization["Middle Name"]" @bind-Value="@NewUserName.MiddleName" />

            
        </MudField>
        <MudField>

                <MudTextField Label="@UserLocalization["Last Name"]" @bind-Value="@NewUserName.Surname" />

            
        </MudField>
  
</Section>
</EditForm>

@code {

#nullable disable warnings
    NewUserName newUserName;

    [Parameter]
    public NewUserName NewUserName{ get => newUserName;set
        {
            if (value == newUserName) return;
            newUserName=value;
            NewUserNameChanged.InvokeAsync(newUserName);

        } }

    [Parameter]
    public EventCallback<NewUserName> NewUserNameChanged { get; set; }
}
