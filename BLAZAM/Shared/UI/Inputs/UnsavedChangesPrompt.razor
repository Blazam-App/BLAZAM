@inherits AppComponentBase
<MudElement Style="width:0px;height:65px;" Class="mx-auto relative">

    <MudStack Style="right:21px;max-width: 300px;bottom: 30px;z-index: 5;" Class="mx-auto p-3 fixed">

        <MudStack Row Class="mx-auto">

            <MudTooltip Text="@AppLocalization["Discard Changes"]">

            <MudFab Color=Color.Error
                    Icon="@Icons.Material.Outlined.Undo"
                    OnClick="@(()=>{DiscardChanges.InvokeAsync();})" />
            </MudTooltip>


            <MudTooltip Text="@AppLocalization["Save Changes"]">
                <MudFab Color=Color.Success
                        Icon="@Icons.Material.Filled.SaveAlt"
                        OnClick="@(()=>{SaveChanges.InvokeAsync();})" />
            </MudTooltip>

        </MudStack>

        <MudChip Color=Color.Info>
            Unsaved Changes
        </MudChip>
        </MudStack>
        </MudElement>

        @code {
    [Parameter]
    public EventCallback SaveChanges { get; set; }
    [Parameter]
    public EventCallback DiscardChanges { get; set; }

}
