@inherits MudSelect<T>
@typeparam T

<MudSelect T="T"
     Dense
     Variant="@Variant"
    Label="@Label"
    HelperText="@HelperText"
    HelperTextOnFocus=@HelperTextOnFocus 
    Class=@Class  
    ListClass="@ListClass"
    
    Style="@Style"> 
        @foreach (var val in Values)
        {
            <MudSelectItem Value="@val">
                <MudText Color="@Color">
                @val
            </MudText>
                </MudSelectItem>
        }
</MudSelect>


@code{
    [Parameter]
    public Color Color { get; set; }
}

