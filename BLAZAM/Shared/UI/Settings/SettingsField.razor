<Row Margin=Margin.Is3.OnX.Is1.FromBottom>
    <MudField>

        <MudFieldLabel Margin=Margin.IsAuto.OnY ColumnSize="ColumnSize.Is2.OnDesktop">
            @FieldLabel

        </FieldLabel>
        <MudFieldBody Margin=Margin.IsAuto.OnY ColumnSize="ColumnSize.Is10">
           
            @FieldBody
            <MudFieldHelp>
                @FieldHelp
            </FieldHelp>
        
    </MudField>
</Row>
@code {

    [Parameter]
    public RenderFragment? FieldLabel { get; set; }
    [Parameter]
    public RenderFragment? FieldBody { get; set; }
    [Parameter]
    public RenderFragment? FieldHelp { get; set; }
}