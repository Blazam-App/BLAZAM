@inherits AppComponentBase

<MudForm method="post" action="/signin">

<SettingsField>
    
            <ADAutoComplete Label="@SettingsLocalization["Impersonate User"]" Display=Display.InlineFlex SearchObjectType="ActiveDirectoryObjectType.User" @bind-SelectedResult=User />
            <MudButton Display=Display.InlineFlex Color=Color.Primary ButtonType="ButtonType.Submit">Impersonate User</MudButton>

    
</SettingsField>

@*Hidden Login form to send impersonation login data*@

    <input type="text" class="d-none" name="Username" value="@User?.SamAccountName" />
    <input type="text" class="d-none" name="Passowrd" value="impersonate" />
    <input type="text" class="d-none" name="Impersonation" value="true"/>

</MudForm>
@code {
    public IDirectoryEntryAdapter? User { get; set; }


}
