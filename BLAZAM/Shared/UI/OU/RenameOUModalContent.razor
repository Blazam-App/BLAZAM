@inherits AppModalContent
<div Background="Background.Light" Color="Color.Dark">
<Section Title=@UserLocalization["OU"]>


    @if (OU.CanReadField(ActiveDirectoryFields.CanonicalName))
    {
        
            
                    <MudTextField Label="@UserLocalization["Name"]" @bind-Value="@OU.CanonicalName" />

            
        
    }
    
    
</Section>


    <MudButton Color=Color.Primary OnClick="SaveChanges">@UserLocalization["Save Changes"]</MudButton>
</div>
@code {

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await InvokeAsync(StateHasChanged);
        Modal.OnYes += SaveChanges;
        Modal.YesText = UserLocalization["Save Changes"];
        Modal.Title = UserLocalization["Rename OU"];
        Modal.YesEnabled = ValidateModal;
    }


    async void SaveChanges()
    {
        SnackBarService.Warning("The ou has been renamed but changes must be saved.", "OU renamed");
        Close();

    }
    protected override bool IsValid=> !OU.CanonicalName.IsNullOrEmpty();
        
    

}
