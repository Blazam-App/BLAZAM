@inherits AppModalContent
<div Background="Background.Light" TextColor="Color.Dark">
<Section Title=@UserLocalization["OU"]>


    @if (OU.CanReadField(ActiveDirectoryFields.CanonicalName))
    {
        <MudField Horizontal ColumnSize="ColumnSize.Is6.OnWidescreen.Is4.OnFullHD">
            <MudFieldLabel>
                @UserLocalization["Name"]
            </FieldLabel>
            
                <MudTextField  @bind-Value="@OU.CanonicalName" />

            
        </MudField>
    }
    
    
</Section>


    <MudButton Color=Color.Primary Clicked="SaveChanges">@UserLocalization["Save Changes"]</MudButton>
</div>
@code {

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await InvokeAsync(StateHasChanged);
    }

    
        async Task SaveChanges()
    {
        await NotificationService.Warning("The ou has been renamed but changes must be saved.", "OU renamed");
        Close();

    }

}
