<style>
    .section {
        position: relative;
        border-radius: 5px;
        margin: 20px 0;
    }


    .section-title {
        position: relative;
    @vspacing;
    @vmargin;
    @hspacing;
    @hmargin;
        /*padding: 10px;*/
        max-width: fit-content;
    }

    .section-title-text {
        font-weight: bold;
        /*  margin-left: 10px; */
    }

    .section-content {
        /*padding: 10px;*/
    }
</style>

@code {
    #nullable disable warnings
    [Parameter]
    public HeaderPosition SectionHeaderPosition { get; set; } = HeaderPosition.TopLeft;

    [Parameter]
    public string Title { get; set; }


    /// <summary>
    /// Color for the text
    /// </summary>
    [Parameter]
    public Color TextColor { get; set; } = Color.Secondary;

    /// <summary>
    /// If set to false, width will fit content
    /// </summary>
    [Parameter]
    public bool FullWidth { get; set; } = true;


    string HeadingSizeString { get { return "h4"; } }

   
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public enum HeaderPosition { TopLeft, TopRight, BottomRight, BottomLeft };
}

