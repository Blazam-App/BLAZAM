@inherits MudDataGrid<T> 
@typeparam T where T:IDirectoryEntryAdapter

<MudDataGrid T="@T"
             Items="@Items"
              Dense
              Filterable
             FilterMode="DataGridFilterMode.Simple"
             Loading=@Loading
              Square
             ColumnResizeMode="ResizeMode.Column"
              Virtualize
             RowClass="cursor-pointer"
             RowClick=@RowClick
             Class="py-0"
             SortMode="SortMode.Single">
    <Columns>
        <PropertyColumn Property="x => x.CanonicalName" Title="Name" />
        <PropertyColumn Property="x => x.OU.ToPrettyOu()" Title="OU" />
        <PropertyColumn Property="x => x.Created" Title="Created" />

    </Columns>
    <PagerContent>
        <MudDataGridPager T="@T" />
    </PagerContent>
</MudDataGrid>


@code{
#nullable disable warnings
}