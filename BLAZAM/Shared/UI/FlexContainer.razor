<MudElement Class=@("d-flex" + Wrap??"flex-wrap" + "gap-"+Spacing)>
    @ChildContent
</MudElement>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool Wrap { get; set; } = true;


    [Parameter]
    public int Spacing { get; set; } = 4;
}
