@inherits AppComponentBase

    <MudStack Row Style="height:1.5em" Class="px-3 mud-width-full">
            <Copyright />
            @if (AutoUpdateService.IsUpdatedScheduled)
            {
                <MudTooltip @onclick=@((c)=>{Nav.NavigateTo("/settings/app");}) Class="mud-theme-info" Float=Float.End Style="width:max-content" Fade Text="An automatic update is scheduled. Click for details">

                    <MudIcon Icon=@("fa-solid fa-circle-up") />
                </MudTooltip>
            }
            <MudSpacer/>
            <MudTooltip Class="mud-theme-info" Style="width:max-content" Text="@Program.Version.Version">

                Version: @Program.Version.ShortVersion
            </MudTooltip>


    </MudStack>
