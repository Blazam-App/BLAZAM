@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject ConnMonitor monitor


<PageTitle>Loading</PageTitle>
    <MudLayout>
            <ErrorMenu />
        <MudContainer Fixed>
            @if (PageHeader != null)
            {
                @PageHeader
            }
        </MudContainer>
        <MudMainContent>
            <MudCard>
                <MudCardBody>
                    @Body

                </MudCardBody>
            </MudCard>
        </MudMainContent>

        <MudContainer Fixed>
            @if (Program.InstallationCompleted)
            {
                <DirectoryConnectingIndicator />

            }
            <AppFooter />

        </MudContainer>
    </MudLayout>

@code {
    [Parameter]
    public RenderFragment? PageHeader { get; set; }


}


