@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject ConnMonitor monitor


<PageTitle>Loading</PageTitle>
<Layout Sider>
    <LayoutSider>
        <LayoutSiderContent>
            <ErrorMenu />
        </LayoutSiderContent>
    </LayoutSider>
    <MudLayout>
        <LayoutHeader Fixed>
            @if (PageHeader != null)
            {
                @PageHeader
            }
        </LayoutHeader>
        <MudMainContent>
            <MudCard>
                <MudCardBody>
                    @Body

                </MudCardBody>
            </MudCard>
        </MudMainContent>

        <LayoutFooter>
            @if (Program.InstallationCompleted)
            {
                <DirectoryConnectingIndicator />

            }
            <AppFooter />

        </LayoutFooter>
    </MudLayout>
</MudLayout>

@code {
    [Parameter]
    public RenderFragment? PageHeader { get; set; }


}


